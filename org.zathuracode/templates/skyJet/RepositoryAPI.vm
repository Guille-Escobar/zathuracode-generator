public interface Repository<T, PK extends 	Serializable> {
		void save(T newEntity) throws RepositoryException;

	T findById(PK id);

	void update(T entity) throws RepositoryException;

	void delete(T entity) throws RepositoryException;

	void deleteById(PK id) throws RepositoryException;

	void deleteByProperty(String tableName, String propertyName,
			Object value) throws RepositoryException;

	void deleteAll() throws RepositoryException ;

	Long count();

	List<T> findAll();

	List<T> findPage(String sortColumnName, boolean sortAscending,
			int startRow, int maxResults);

	List<T> findByCriteria(String whereCondition);

	List<T> findByProperty(String propertyName, Object value);
}
